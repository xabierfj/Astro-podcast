---
import podcastInfo from "../lib/podcast.config";
const { hosts } = podcastInfo;
---

<div class="rounded-lg sm:px-6 md:px-4 lg:mx-0 lg:mt-0 lg:pb-0 dark:bg-dark-card">
  {
    hosts.map((host) => (
      <a href={host.bluesky} target="_blank" rel="noopener noreferrer">
        <div class="mb-4 flex items-center">
          <img class="mr-4 h-15 w-15 rounded-lg" src={host.img} alt="" />
          <p class="text-[1.4rem]">{host.name}</p>
        </div>
      </a>
    ))
  }
</div>

