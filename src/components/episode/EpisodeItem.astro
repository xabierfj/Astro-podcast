---

const { title, description } = Astro.props

---
<div class="flex w-full flex-col py-12 lg:flex-row">
  <img 
    src="https://img-static.ivoox.com/index.php?w=255&h=255&url=https://static-1.ivoox.com/audios/7/3/4/f/734f9e3c1b37ccc682538daad04a2c3e_XXL.jpg" 
    alt="Episode image"
    aria-hidden="true"
    class="mb-3 block h-20 w-20 rounded-md lg:mr-6"
    height="80"
    width="80"
  />
  <div class="flex flex-col">
    <!-- Here's the date -->
     <h2 class="my-2 text-lg font-bold text-light-text-heading dark:text-text-bg">
       <a href="#">
        {title}
       </a>
     </h2>
     <p class="mb-5">{description}</p>
     <div class="flex items-center gap-6 text-sm">
        <a href="#" class="font-bold text-light-text-heading dark:text-text-bg">Escuchar</a>
        <a href="#" class="font-bold text-light-text-heading dark:text-text-bg">Mostrar Notas</a>
     </div>
     <!-- <p class="my-2 text-lg font-bold text-light-text-heading dark:text-text-bg">Episodio de refencia: 04x02: Pa' loca tu calva</p> -->
  </div>
</div>