---
import podcastInfo from '../lib/podcast.config'
import Hosts from './Hosts.astro'
import Platforms from './Platforms.astro'
import ShowImage from './ShowImage.astro'
---

<header class="flex w-112 max-h-screen scrollbar-thin items-start overflow-y-auto xl:w-120 bg-card m-3 pr-2 rounded-lg"> 
  <div class="mx-auto lg:min-h-full lg:flex-auto">
    <div class="m-2 rounded-lg bg-light-card dark:bg-dark-card">
      <ShowImage image="https://i.scdn.co/image/ab67656300005f1fbc07b3af063cfcbc55b8f73e" />
      <div class="px-4 sm:px6 md:px4-lg:px16">
        <p class="mt-2 text-center text-3xl font-bold text-light-text-heading lg:text-left dark:text-text-bg">
          {podcastInfo.title}
        </p>
        <p class="mt-2 text-center text-2xl font-semiboldbold text-light-text-heading lg:text-left dark:text-text-bg">
          {podcastInfo.description}
        </p>
      </div>
    </div>
      <div class="dark:text-text-bg">
        <Platforms />
      </div>
      <div class="dark:text-text-bg">
        <Hosts />
      </div>
  </div>
</header>