---
// src/components/PodcastCard.astro
const { title, description, image, link } = Astro.props;
---

<article class="max-w-sm rounded overflow-hidden shadow-lg m-4 transition-transform transform hover:scale-105">
  <img class="w-full" src={image} alt={title} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">{description}</p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <a href={link} target="_blank" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Listen Now
    </a>
  </div>
</article>