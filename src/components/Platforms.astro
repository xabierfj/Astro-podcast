---
import podcastInfo from "../lib/podcast.config";

const { platforms } = podcastInfo;
---
<div class="flex flex-row lg:flex-col">
    <div class="flex flex-row justify-around">
        <a class="h-7 w-7 spotify" href={platforms.spotify} target="_blank" rel="noopener noreferrer"></a>
        <a class="h-7 w-7 ivoox" href={platforms.ivox} target="_blank" rel="noopener noreferrer"></a>
        <a class="h-7 w-7 kofi" href={platforms.kofi} target="_blank" rel="noopener noreferrer"></a>
        <a class="h-7 w-7 bluesky" href={platforms.bluesky} target="_blank" rel="noopener noreferrer"></a>
        <a class="h-7 w-7 instagram" href={platforms.instagram} target="_blank" rel="noopener noreferrer"></a>
    </div>
</div>

<style>
  :root {
  --mask-color: #8b3737;/* Default color */
  }
  .ivoox {
      mask-image: url(../icons/ivoox.svg);
      mask-size: contain;
      mask-repeat: no-repeat;
      background-color: var(--mask-color);
  }
  .kofi {
      mask-image: url(../icons/kofi.svg);
      mask-size: contain;
      mask-repeat: no-repeat;
      background-color: currentColor;
  }
  .instagram {
      mask-image: url(../icons/instagram.svg);
      mask-size: contain;
      mask-repeat: no-repeat;
      background-color: var(--mask-color);
  }
  .bluesky {
      mask-image: url(../icons/bluesky.svg);
      mask-size: contain;
      mask-repeat: no-repeat;
      background-color: var(--mask-color);
  }
  .spotify {
      mask-image: url(../icons/spotify.svg);
      mask-size: contain;
      mask-repeat: no-repeat;
      background-color: var(--mask-color);
  }
</style>