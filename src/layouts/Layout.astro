---
import Header from "../components/Header.astro";
import Dots from "../components/Dots.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Podcast de Proletario y Parasito sobre los simpsons" />
    <meta name="keywords" content="podcast, los simpsons, proletario y parasito" />
    <meta name="author" content="Xabier Figueroa" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="og:type" content="website" />
    <meta name="og:locale" content="es_ES" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background font-inter text-light-text-body antialiased dark:bg-dark-background dark:text-dark-text-body flex flex-row h-screen w-screen">
    <Header />
    <!-- <main class="mx-2 rounded-lg bg-gray-700 lg:relative lg:ml-112 lg:min-h-screen xl:ml-120 ml-160 lg:pr-1 pl-5 dark:bg-dark-card"> -->
    <main class="bg-gray-600 max-h-screen w-full my-3 mr-3 pr-2 rounded-lg">
      <div class="relative mt-3">
        <div class="max-w-4xl">
          <div class:list={[
          'mb-12 border-b pb-6 lg:mb16 lg:pb10 dark:border-dark-border',
          Astro.url.pathname === '/' && 'hidden',
          ]}>
          Test
          </div>
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
